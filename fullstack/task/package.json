{
    "name": "dishboard",
    "packageManager": "yarn@3.2.3",
    "workspaces": [
        "packages/**"
    ],
    "scripts": {
        "server": "yarn nx run --project server",
        "client": "yarn nx run --project client",
        "server:start": "yarn nx run --project server start",
        "server:db-create": "cd packages/server && yarn db-create",
        "server:migration": "cd packages/server && yarn migration",
        "client:start": "yarn nx run --project client start",
        "server:build": "yarn nx run --project server build",
        "client:build": "yarn nx run --project client build",
        "start": "concurrently --kill-others-on-fail \"yarn server:start\" \"yarn client:start\"",
        "build": "yarn server:build && yarn client:build",
        "codecheck": "yarn nx run-many --target codecheck --all",
        "codecheck:fix": "yarn nx run-many --target codecheck --configuration fix --all",
        "install:windows": "npm install -g yarn && yarn install",
        "setup:windows": "yarn install:windows"
    },
    "dependencies": {
        "@types/jest": "28.1.8",
        "eslint": "8.24.0",
        "jest": "28.1.3",
        "prettier": "2.7.1",
        "react-feather": "^2.0.10",
        "ts-jest": "28.0.8",
        "ts-node": "^10.9.1",
        "typescript": "4.7.4"
    },
    "devDependencies": {
        "@types/node": "18.8.0",
        "concurrently": "^7.6.0",
        "cross-env": "^7.0.3",
        "nx": "15.5.2",
        "tsconfig-paths": "4.1.0",
        "yarn": "^1.22.22"
    }
}
